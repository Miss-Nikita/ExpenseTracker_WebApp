<%- include("partials/header") %>
<link rel="stylesheet" href="/stylesheets/animations.css" />
<style>
  /* Background Animation */
  @keyframes backgroundAnimation {
    0% {
      background-color: #e5faf2; /* light green */
    }
    50% {
      background-color: #f0f9ff; /* light blue */
    }
    100% {
      background-color: #e5faf2; /* light green */
    }
  }

  /* Floating Notes Animation */
  .note {
    position: absolute;
    width: 100px;
    height: 100px;
    background: rgba(255, 255, 255, 0.7);
    border-radius: 15px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-15px);
    }
    100% {
      transform: translateY(0);
    }
  }

  /* Apply animation to the body */
  .animated-bg {
    animation: backgroundAnimation 8s ease-in-out infinite;
    overflow: hidden;
  }

  /* Container Styles */
  .container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    padding: 20px;
    z-index: 1; /* Ensure content is above background */
  }

  /* Navigation Styles */
  .nav {
    width: 100%;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    padding: 10px 0;
    position: fixed; /* Fixed position to stay at the top */
    top: 0;
    left: 0;
    z-index: 2; /* Above other content */
  }

  .nav ul {
    list-style: none;
    display: flex;
    justify-content: center;
    gap: 20px;
  }

  .nav a {
    text-decoration: none;
    color: #333;
    font-weight: bold;
  }

  .nav a:hover {
    color: #38a169; /* Tailwind green */
  }

  /* Avatar Preview Style */
  .avatar-preview {
    cursor: pointer; /* Pointer for clickable avatar */
    border: 4px solid #38a169; /* Tailwind green border */
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2); /* Soft shadow */
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    margin-bottom: 20px; /* Spacing below the avatar */
  }

  .avatar-preview:hover {
    transform: scale(1.15) rotate(5deg); /* Slight zoom and rotation on hover */
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3); /* Enhanced shadow on hover */
  }

  /* Form Styles */
  .update-form,
  .avatar-form {
    background: white; 
    border-radius: 10px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    padding: 20px;
    margin: 20px auto;
    width: 100%; 
    max-width: 400px; 
    transition: transform 0.3s ease;
  }

  .update-form:hover {
    transform: scale(1.02); /* Slightly scale up on hover */
  }

  .update-form input {
    width: 100%;
    padding: 12px;
    margin-bottom: 15px;
    border: 1px solid #ccc;
    border-radius: 5px;
    transition: border 0.3s;
  }

  .update-form input:focus {
    outline: none;
    border: 2px solid #38a169; /* Tailwind green */
  }

  .update-form button {
    background: linear-gradient(to right, #38a169, #2f855a);
    color: white;
    padding: 12px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    width: 100%;
    transition: background 0.3s, transform 0.3s;
  }

  .update-form button:hover {
    background: linear-gradient(to right, #2f855a, #38a169);
    transform: scale(1.05); /* Slightly scale up button on hover */
  }

  /* Loading Spinner */
  .spinner {
    display: none; /* Hidden by default */
    border: 4px solid rgba(255, 255, 255, 0.2);
    border-top: 4px solid #fff;
    border-radius: 50%;
    width: 30px;
    height: 30px;
    animation: spin 1s linear infinite;
    margin: 10px auto; /* Center spinner */
  }

  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
</style>

