<%- include("partials/header") %>
<%- include("partials/nav") %>

<style>
  /* Background Animation */
  @keyframes backgroundAnimation {
    0% {
      background-color: #e5faf2; /* Light green */
    }
    50% {
      background-color: #f0f9ff; /* Light blue */
    }
    100% {
      background-color: #e5faf2; /* Light green */
    }
  }

  /* Floating Notes Animation */
  @keyframes float {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-15px);
    }
    100% {
      transform: translateY(0);
    }
  }

  .animated-bg {
    animation: backgroundAnimation 8s ease-in-out infinite;
    position: relative;
    overflow: hidden; /* Ensure floating elements stay within */
  }

  /* Floating elements */
  .floating-element {
    position: absolute;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 50%;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    animation: float 6s ease-in-out infinite;
  }

  /* Size and positioning of floating elements */
  .bubble1 {
    width: 120px;
    height: 120px;
    top: 10%;
    left: 5%;
    animation-delay: 0s;
  }

  .bubble2 {
    width: 80px;
    height: 80px;
    top: 60%;
    left: 75%;
    animation-delay: 2s;
  }

  .bubble3 {
    width: 100px;
    height: 100px;
    top: 40%;
    left: 25%;
    animation-delay: 4s;
  }
</style>

<!-- Forget Password Page -->
<div class="animated-bg min-h-screen flex items-center justify-center px-4 py-12 relative">
  <!-- Floating Elements in Background -->
  <div class="floating-element bubble1"></div>
  <div class="floating-element bubble2"></div>
  <div class="floating-element bubble3"></div>

  <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-lg z-10 relative">
    <h1 class="text-3xl font-bold text-center text-gray-900 mb-6">Set New Password</h1>
    
    <!-- Set Password Form -->
    <form action="/user/set-password/<%= id %>" method="post" class="space-y-6">
      <!-- Password Input -->
      <div>
        <label for="password" class="sr-only">New Password</label>
        <input type="password" name="password" placeholder="********"
          class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-green-500 focus:outline-none focus:border-green-500"
          required>
      </div>

      <!-- Set Password Button -->
      <button type="submit"
        class="w-full bg-green-500 hover:bg-green-600 text-white py-3 rounded-md font-semibold transition duration-300">
        Set Password
      </button>
    </form>

    <!-- Instructional Text -->
    <p class="text-center text-gray-600 text-sm mt-4">
      Please enter your new password to reset it.
    </p>
  </div>
</div>

<%- include("partials/footer") %>
