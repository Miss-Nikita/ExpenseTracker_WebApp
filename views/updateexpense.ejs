<%- include("partials/header")%> <%- include("partials/nav")%>

<div class="h-[calc(100vh-4rem)] bg-gray-100">
  <div class="max-w-4xl mx-auto px-4 py-6">
    <!-- Main Card with Decorative Elements -->
    <div
      class="bg-white rounded-3xl shadow-lg p-6 animate-fadeIn relative overflow-hidden"
    >
      <!-- Decorative Elements -->
      <div
        class="absolute top-0 right-0 w-40 h-40 bg-gradient-to-br from-green-500/10 to-teal-500/10 rounded-full -mr-20 -mt-20"
      ></div>
      <div
        class="absolute bottom-0 left-0 w-32 h-32 bg-gradient-to-tr from-teal-500/10 to-green-500/10 rounded-full -ml-16 -mb-16"
      ></div>
      <div
        class="absolute top-1/2 left-1/2 w-24 h-24 bg-gradient-to-bl from-green-500/5 to-teal-500/5 rounded-full transform -translate-x-1/2 -translate-y-1/2"
      ></div>

      <!-- Top Section -->
      <div class="flex items-center justify-between mb-6 relative">
        <div>
          <h1 class="text-2xl font-bold text-gray-800 flex items-center gap-2">
            <i class="fas fa-edit text-teal-500 animate-bounce"></i>
            Update Expense
          </h1>
          <p class="text-gray-500 mt-1">Edit your expense information</p>
        </div>
        <!-- <div class="bg-gradient-to-r from-green-500 to-teal-500 p-3 rounded-2xl text-white transform hover:scale-105 transition-transform">
                    <p class="text-sm opacity-90 flex items-center gap-2">
                        <i class="fas fa-wallet"></i>
                        Current Amount
                    </p>
                    <p class="text-2xl font-bold">$<%= expense.amount%></p>
                </div> -->
      </div>

      <!-- Form Grid -->
      <form action="/expense/update/<%= expense._id%>" method="post">
        <div class="grid grid-cols-2 gap-5">
          <!-- Left Column -->
          <div class="space-y-5">
            <!-- Title -->
            <div class="group">
              <label
                class="block text-sm font-medium text-gray-700 mb-1 flex items-center gap-2"
              >
                <i
                  class="fas fa-tag text-teal-500 group-hover:rotate-12 transition-transform"
                ></i>
                Title
              </label>
              <input
                type="text"
                name="title"
                value="<%= expense.title%>"
                class="w-full px-4 py-2 rounded-xl bg-gray-50 border-2 border-gray-100 focus:border-teal-500 focus:bg-white transition-all pl-10"
                placeholder="Expense title"
              />
              <i class="fas fa-pencil absolute mt-9 ml-3 text-gray-400"></i>
            </div>

            <!-- Amount -->
            <div class="group">
              <label
                class="block text-sm font-medium text-gray-700 mb-1 flex items-center gap-2"
              >
                <i
                  class="fas fa-dollar-sign text-teal-500 group-hover:bounce transition-transform"
                ></i>
                Amount
              </label>
              <div class="relative">
                <span class="absolute left-4 top-2 text-gray-400">$</span>
                <input
                  type="number"
                  name="amount"
                  value="<%= expense.amount%>"
                  class="w-full pl-8 pr-4 py-2 rounded-xl bg-gray-50 border-2 border-gray-100 focus:border-teal-500 focus:bg-white transition-all"
                  placeholder="0.00"
                />
              </div>
            </div>

            <!-- Category -->
            <div class="group">
              <label
                class="block text-sm font-medium text-gray-700 mb-1 flex items-center gap-2"
              >
                <i
                  class="fas fa-folder text-teal-500 group-hover:rotate-12 transition-transform"
                ></i>
                Category
              </label>
              <div class="relative">
                <input
                  type="text"
                  name="category"
                  value="<%= expense.category%>"
                  class="w-full px-4 py-2 rounded-xl bg-gray-50 border-2 border-gray-100 focus:border-teal-500 focus:bg-white transition-all pl-10"
                  placeholder="Select category"
                />
                <i
                  class="fas fa-th-list absolute left-3 top-2.5 text-gray-400"
                ></i>
              </div>
            </div>
          </div>

          <!-- Right Column -->
          <div class="space-y-5">
            <!-- Payment Mode -->
            <div class="group">
              <label
                class="block text-sm font-medium text-gray-700 mb-1 flex items-center gap-2"
              >
                <i
                  class="fas fa-credit-card text-teal-500 group-hover:rotate-12 transition-transform"
                ></i>
                Payment Mode
              </label>
              <div class="relative">
                <input
                  type="text"
                  name="paymentmode"
                  value="<%= expense.paymentmode%>"
                  class="w-full px-4 py-2 rounded-xl bg-gray-50 border-2 border-gray-100 focus:border-teal-500 focus:bg-white transition-all pl-10"
                  placeholder="How did you pay?"
                />
                <i
                  class="fas fa-money-bill absolute left-3 top-2.5 text-gray-400"
                ></i>
              </div>
            </div>

            <!-- Remark -->
            <div class="group">
              <label
                class="block text-sm font-medium text-gray-700 mb-1 flex items-center gap-2"
              >
                <i
                  class="fas fa-comment text-teal-500 group-hover:rotate-12 transition-transform"
                ></i>
                Remark
              </label>
              <div class="relative">
                <textarea
                  name="remark"
                  rows="4"
                  class="w-full px-4 py-2 rounded-xl bg-gray-50 border-2 border-gray-100 focus:border-teal-500 focus:bg-white transition-all resize-none pl-10"
                  placeholder="Add notes..."
                >
<%= expense.remark%></textarea
                >
                <i
                  class="fas fa-pencil-alt absolute left-3 top-3 text-gray-400"
                ></i>
              </div>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex gap-4 mt-6">
          <button
            type="submit"
            class="flex-1 bg-gradient-to-r from-green-500 to-teal-500 text-white font-medium py-2.5 rounded-xl hover:opacity-90 transform hover:scale-[1.02] transition-all flex items-center justify-center gap-2"
          >
            <i class="fas fa-check-circle animate-pulse"></i>
            Update Expense
          </button>
          <button
            type="button"
            onclick="history.back()"
            class="px-6 py-2.5 bg-gray-100 text-gray-600 font-medium rounded-xl hover:bg-gray-200 flex items-center gap-2"
          >
            <i class="fas fa-times"></i>
            Cancel
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<style>
  /* Remove scrollbar from body */
  body {
    overflow: hidden;
  }

  /* Remove number input arrows */
  input[type="number"]::-webkit-inner-spin-button,
  input[type="number"]::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }
  input[type="number"] {
    -moz-appearance: textfield;
  }

  /* Animations */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 0.5s ease-out;
  }

  .animate-bounce {
    animation: bounce 1s infinite;
  }

  @keyframes bounce {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-3px);
    }
  }

  /* Hover Animations */
  .group:hover i.text-teal-500 {
    transform: scale(1.2);
  }

  .transform {
    transition: all 0.2s ease;
  }

  /* Additional decorative animations */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .bg-gradient-to-br {
    animation: float 8s ease-in-out infinite;
  }

  .bg-gradient-to-tr {
    animation: float 6s ease-in-out infinite reverse;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 0.5;
    }
    50% {
      opacity: 0.8;
    }
  }

  .bg-gradient-to-bl {
    animation: pulse 4s ease-in-out infinite;
  }

  /* Add a subtle gradient overlay */
  .bg-white::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0) 100%
    );
    pointer-events: none;
  }

  /* Add a subtle shadow effect */
  .shadow-lg {
    box-shadow:
      0 10px 30px -5px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  /* Add hover effect to the main card */
  .bg-white {
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .bg-white:hover {
    transform: translateY(-2px);
    box-shadow:
      0 12px 35px -5px rgba(0, 0, 0, 0.15),
      0 5px 8px -2px rgba(0, 0, 0, 0.08);
  }
</style>

<!-- Add FontAwesome for icons -->
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
/>

<%- include("partials/footer")%>
