<%- include("partials/header") %>
<%- include("partials/nav") %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-50">
    <div class="max-w-4xl mx-auto px-4 py-12">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Expense Details</h1>
            <p class="text-gray-500 mt-2">View and manage your expense information</p>
        </div>

        <!-- Main Card -->
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
            <!-- Top Gradient Bar -->
            <div class="h-2 bg-gradient-to-r from-blue-500 to-indigo-500"></div>

            <!-- Content -->
            <div class="p-6">
                <!-- Amount Display -->
                <div class="text-center mb-8">
                    <p class="text-sm font-medium text-gray-500">Total Amount</p>
                    <p class="text-4xl font-bold text-gray-900 mt-1">
                        $<%= expense.amount.toFixed(2) %>
                    </p>
                </div>

                <!-- Details Grid -->
                <div class="grid gap-6 mb-8">
                    <!-- Title -->
                    <div class="bg-gray-50 rounded-xl p-4 hover:bg-gray-100 transition-colors">
                        <p class="text-sm font-medium text-gray-500 mb-1">Title</p>
                        <p class="text-lg font-medium text-gray-900"><%= expense.title %></p>
                    </div>

                    <!-- Category -->
                    <div class="bg-gray-50 rounded-xl p-4 hover:bg-gray-100 transition-colors">
                        <p class="text-sm font-medium text-gray-500 mb-1">Category</p>
                        <div class="flex items-center">
                            <span class="w-2 h-2 rounded-full bg-indigo-500 mr-2"></span>
                            <p class="text-lg font-medium text-gray-900"><%= expense.category %></p>
                        </div>
                    </div>

                    <!-- Payment Mode -->
                    <div class="bg-gray-50 rounded-xl p-4 hover:bg-gray-100 transition-colors">
                        <p class="text-sm font-medium text-gray-500 mb-1">Payment Mode</p>
                        <div class="flex items-center">
                            <span class="w-2 h-2 rounded-full bg-emerald-500 mr-2"></span>
                            <p class="text-lg font-medium text-gray-900"><%= expense.paymentmode %></p>
                        </div>
                    </div>

                    <!-- Remark -->
                    <div class="bg-gray-50 rounded-xl p-4 hover:bg-gray-100 transition-colors">
                        <p class="text-sm font-medium text-gray-500 mb-1">Remark</p>
                        <p class="text-lg font-medium text-gray-900"><%= expense.remark %></p>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex gap-4 pt-6 border-t border-gray-100">
                    <a href="/expense/update/<%= expense._id %>" 
                       class="flex-1 px-6 py-3 bg-indigo-600 text-white text-center font-medium rounded-xl hover:bg-indigo-700 transition-colors">
                        Edit Expense
                    </a>
                    <a href="/expense/delete/<%= expense._id %>" 
                       class="flex-1 px-6 py-3 bg-white text-red-600 text-center font-medium rounded-xl border border-red-200 hover:bg-red-50 transition-colors">
                        Delete Expense
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

    body {
        font-family: 'Inter', sans-serif;
        -webkit-font-smoothing: antialiased;
    }

    /* Hide scrollbar */
    body::-webkit-scrollbar {
        display: none;
    }

    body {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
</style>

<%- include("partials/footer") %>
