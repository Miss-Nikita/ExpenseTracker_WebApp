<%- include("partials/header") %>
<%- include("partials/nav") %>

<!-- Background Animation and Reset Password Page -->
<style>
  /* Color Changing Background Animation */
  @keyframes backgroundAnimation {
    0% {
      background-color: #f0f9ff; /* Light Blue */
    }
    50% {
      background-color: #e5faf2; /* Light Green */
    }
    100% {
      background-color: #f0f9ff; /* Light Blue */
    }
  }

  /* Floating Shapes Animation */
  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
    100% {
      transform: translateY(0px);
    }
  }

  .animated-bg {
    animation: backgroundAnimation 8s ease-in-out infinite;
    position: relative;
    overflow: hidden; /* Ensures floating elements stay inside */
  }

  /* Floating elements */
  .floating-element {
    position: absolute;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 50%;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    animation: float 6s ease-in-out infinite;
  }

  /* Size and positioning of floating elements */
  .bubble1 {
    width: 120px;
    height: 120px;
    top: 20%;
    left: 10%;
    animation-delay: 0s;
  }

  .bubble2 {
    width: 80px;
    height: 80px;
    top: 50%;
    left: 75%;
    animation-delay: 2s;
  }

  .bubble3 {
    width: 100px;
    height: 100px;
    top: 75%;
    left: 25%;
    animation-delay: 4s;
  }

  .bubble4 {
    width: 80px;
    height: 80px;
    top: 65%;
    left: 50%;
    animation-delay: 2s;
  }

  .bubble5 {
    width: 100px;
    height: 100px;
    top: 35%;
    left: 65%;
    animation-delay: 4s;
  }
</style>

<div class="animated-bg min-h-screen flex items-center justify-center px-4 py-12">
  <!-- Floating Elements in Background -->
  <div class="floating-element bubble1"></div>
  <div class="floating-element bubble2"></div>
  <div class="floating-element bubble3"></div>
  <div class="floating-element bubble4"></div>
  <div class="floating-element bubble5"></div>


  <!-- Reset Password Form Container -->
  <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-lg z-10 relative">
    <h1 class="text-3xl font-bold text-center text-gray-900 mb-6">Reset Password</h1>

    <!-- Reset Password Form -->
    <form action="/user/reset-password" method="post" class="space-y-6">
      <!-- Old Password Input -->
      <div>
        <label for="oldpassword" class="sr-only">Old Password</label>
        <input type="password" name="oldpassword" placeholder="Old Password"
          class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-green-500 focus:outline-none focus:border-green-500"
          required>
      </div>

      <!-- New Password Input -->
      <div>
        <label for="newpassword" class="sr-only">New Password</label>
        <input type="password" name="newpassword" placeholder="New Password"
          class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-green-500 focus:outline-none focus:border-green-500"
          required>
      </div>

      <!-- Reset Button -->
      <button type="submit"
        class="w-full bg-green-500 hover:bg-green-600 text-white py-3 rounded-md font-semibold transition duration-300">
        Reset Password
      </button>
    </form>

    <!-- Instructional Text -->
    <p class="text-center text-gray-600 text-sm mt-4">
      Enter your old password and choose a new one to reset it.
    </p>
  </div>
</div>

<%- include("partials/footer") %>
